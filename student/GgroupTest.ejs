<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= groupName %> - Test Bank System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar.navbar-expand-lg.navbar-dark {
            background: linear-gradient(135deg, #001a8f 0%, #d4cc26 100%) !important;
        }
        .sidebar {
            min-height: calc(100vh - 56px);
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .nav-link {
            color: #333;
            padding: 10px 15px;
            margin: 2px 0;
        }
        .nav-link:hover, .nav-link.active {
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
        .test-card {
            transition: transform 0.2s;
            margin-bottom: 20px;
        }
        .test-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .status-open { color: #28a745; font-weight: bold; }
        .status-done { color: #6c757d; font-weight: bold; }
        .status-closed { color: #dc3545; font-weight: bold; }
        
        .file-card {
            border-left: 4px solid #007bff;
        }
        .file-card.video { border-left-color: #dc3545; }
        .file-card.audio { border-left-color: #fd7e14; }
        .file-card.image { border-left-color: #20c997; }
        .file-card.link { border-left-color: #6f42c1; }
    </style>
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-graduation-cap me-2"></i>Test Bank System
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    Welcome, <%= user.fullName %> (Student)
                </span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/student/dashboard">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/student/groups">
                                <i class="fas fa-users me-2"></i>Groups
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                <i class="fas fa-book me-2"></i><%= groupName %>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <!-- Group Header -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div>
                        <h2><%= groupName %></h2>
                        <p class="text-muted">Subject Code: <%= groupCode %> | Created by: <%= groupAdmin %></p>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-primary fs-6">
                            <i class="fas fa-users me-1"></i><%= memberCount %> Members
                        </span>
                    </div>
                </div>

                <!-- Tabs Navigation -->
                <ul class="nav nav-tabs mt-4" id="groupTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="tests-tab" data-bs-toggle="tab" data-bs-target="#tests" type="button" role="tab">
                            <i class="fas fa-tasks me-2"></i>Tests
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="files-tab" data-bs-toggle="tab" data-bs-target="#files" type="button" role="tab">
                            <i class="fas fa-folder me-2"></i>Files
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content mt-3" id="groupTabContent">
                    <!-- Tests Tab -->
                    <div class="tab-pane fade show active" id="tests" role="tabpanel">
                        <div class="row">
                            <!-- Test 1 -->
                            <div class="col-md-6 col-lg-4">
                                <div class="card test-card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">Midterm Examination</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><strong>Percentage:</strong> 30% of final grade</p>
                                        <p class="card-text"><strong>Time Limit:</strong> 60 minutes</p>
                                        <p class="card-text"><strong>Deadline:</strong> Dec 15, 2024 23:59</p>
                                        <p class="card-text"><strong>Questions:</strong> 10</p>
                                        <p class="card-text"><strong>Status:</strong> 
                                            <span class="status-open">Open</span>
                                        </p>
                                        <p class="card-text"><strong>Score:</strong> Not taken</p>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-success w-100 mb-2" onclick="openTestModal('Midterm Examination')">
                                            <i class="fas fa-play-circle me-2"></i>Take Test
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Test 2 -->
                            <div class="col-md-6 col-lg-4">
                                <div class="card test-card">
                                    <div class="card-header bg-secondary text-white">
                                        <h5 class="mb-0">Chapter 1 Quiz</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><strong>Percentage:</strong> 10% of final grade</p>
                                        <p class="card-text"><strong>Time Limit:</strong> 30 minutes</p>
                                        <p class="card-text"><strong>Deadline:</strong> Nov 30, 2024 23:59</p>
                                        <p class="card-text"><strong>Questions:</strong> 5</p>
                                        <p class="card-text"><strong>Status:</strong> 
                                            <span class="status-done">Completed</span>
                                        </p>
                                        <p class="card-text"><strong>Score:</strong> 18/20 (90%)</p>
                                    </div>
                                    <div class="card-footer">
                                        <a href="/student/test-results/quiz1" class="btn btn-info w-100">
                                            <i class="fas fa-chart-line me-2"></i>View Results
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Test 3 -->
                            <div class="col-md-6 col-lg-4">
                                <div class="card test-card">
                                    <div class="card-header bg-danger text-white">
                                        <h5 class="mb-0">Final Project</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text"><strong>Percentage:</strong> 40% of final grade</p>
                                        <p class="card-text"><strong>Time Limit:</strong> 120 minutes</p>
                                        <p class="card-text"><strong>Deadline:</strong> Jan 15, 2025 23:59</p>
                                        <p class="card-text"><strong>Questions:</strong> 15</p>
                                        <p class="card-text"><strong>Status:</strong> 
                                            <span class="status-closed">Not Available</span>
                                        </p>
                                        <p class="card-text"><strong>Score:</strong> Not available</p>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-secondary w-100" disabled>
                                            <i class="fas fa-lock me-2"></i>Not Available
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Files Tab -->
                    <div class="tab-pane fade" id="files" role="tabpanel">
                        <div class="row">
                            <!-- Modules -->
                            <div class="col-12 mb-4">
                                <h4><i class="fas fa-book me-2"></i>Modules</h4>
                                <div class="card file-card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Introduction to Programming.pdf</h6>
                                                <small class="text-muted">Uploaded: Nov 15, 2024 | Size: 2.3 MB</small>
                                            </div>
                                            <a href="#" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card file-card mt-2">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Data Structures Tutorial.docx</h6>
                                                <small class="text-muted">Uploaded: Nov 20, 2024 | Size: 1.8 MB</small>
                                            </div>
                                            <a href="#" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Images -->
                            <div class="col-12 mb-4">
                                <h4><i class="fas fa-image me-2"></i>Images</h4>
                                <div class="card file-card image">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Algorithm Flowchart.png</h6>
                                                <small class="text-muted">Uploaded: Nov 18, 2024 | Size: 450 KB</small>
                                            </div>
                                            <a href="#" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Videos -->
                            <div class="col-12 mb-4">
                                <h4><i class="fas fa-video me-2"></i>Videos</h4>
                                <div class="card file-card video">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Programming Basics Tutorial.mp4</h6>
                                                <small class="text-muted">Uploaded: Nov 10, 2024 | Size: 45.2 MB</small>
                                            </div>
                                            <a href="#" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Links -->
                            <div class="col-12 mb-4">
                                <h4><i class="fas fa-link me-2"></i>Useful Links</h4>
                                <div class="card file-card link">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Online Compiler - Replit</h6>
                                                <small class="text-muted">https://replit.com</small>
                                            </div>
                                            <a href="https://replit.com" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-external-link-alt me-1"></i>Visit
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card file-card link mt-2">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Programming Documentation</h6>
                                                <small class="text-muted">https://docs.python.org</small>
                                            </div>
                                            <a href="https://docs.python.org" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-external-link-alt me-1"></i>Visit
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Take Test Modal -->
    <div class="modal fade" id="testModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Take Test - Midterm Examination</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Do you want to take this test?</strong><br>
                        Once started, the timer will begin and you must complete the test within the time limit.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Start Test</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openTestModal(testTitle) {
            const modal = new bootstrap.Modal(document.getElementById('testModal'));
            modal.show();
        }
    </script>
</body>
</html>